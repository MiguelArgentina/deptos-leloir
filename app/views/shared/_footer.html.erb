<footer class="bg-slate-900 text-white py-8 mt-12">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 text-center md:text-left">

      <!-- Contact Info -->
      <div id="contact-footer">
        <h5 class="text-lg font-semibold mb-4">Contacto</h5>
        <ul class="space-y-2 text-sm">
          <% if defined?(apartment) && apartment.contact_name.present? %>
              <li>
                <i class="fas fa-user mr-2 text-indigo-400"></i>
                <span class="hover:underline text-indigo-200"><%= apartment.contact_name %></span>
              </li>
          <% end %>
          <li>
            <i class="fas fa-envelope mr-2 text-indigo-400"></i>
            <% if defined?(apartment) && apartment.contact_email.present? %>
              <a href="mailto:<%= apartment.contact_email %>" class="hover:underline text-indigo-200"><%= apartment.contact_email %></a>
            <% else %>
              <a href="mailto:deptosleloir@gmail.com" class="hover:underline text-indigo-200">deptosleloir@gmail.com</a>
            <% end %>
          </li>
          <li>
            <i class="fas fa-phone mr-2 text-indigo-400"></i>
            <% if defined?(apartment) && apartment.contact_phone.present? %>
              <a href="tel:<%= apartment.contact_phone %>" class="hover:underline text-indigo-200"><%= apartment.contact_phone %></a>
            <% else %>
              <a href="tel:+5492994524509" class="hover:underline text-indigo-200">+54 9 299 452 4509</a>
            <% end %>
          </li>
          <li>
            <i class="fab fa-whatsapp mr-2 text-green-400"></i>
            <% if defined?(apartment) && apartment.contact_phone.present? %>
              <a href="https://wa.me/<%= apartment.contact_phone %>" class="hover:underline text-indigo-200"><%= apartment.contact_phone %></a>
            <% else %>
              <a href="https://wa.me/5492994524509" target="_blank"  rel="noopener" class="hover:underline text-indigo-200">+54 9 299 452 4509</a>
            <% end %>
          </li>
          <li>
            <i class="fas fa-home mr-2 text-indigo-400"></i>Leloir 929, Neuquén, Neuquén
          </li>
        </ul>
      </div>

      <!-- Payment Methods -->
      <div>
        <h5 class="text-lg font-semibold mb-4">Formas de Pago</h5>
        <div class="flex justify-center md:justify-start items-center gap-4 text-xl text-indigo-200">
          <i class="fas fa-money-bill-wave"></i>
          <i class="fas fa-qrcode"></i>
          <i class="fas fa-university"></i>
          <img src="<%= asset_path('mercado-pago-pluma.svg') %>" alt="Mercado Pago" class="h-6" />
        </div>
      </div>

    </div>

    <hr class="border-slate-700 my-6" />

    <p class="text-center text-sm text-indigo-300">
      Desarrollado por
      <a href="https://github.com/MiguelArgentina" target="_blank" class="hover:underline text-indigo-100">
        <i class="fab fa-github mr-1"></i>Miguel Tucu Gomez
      </a>
    </p>
  </div>
</footer>
